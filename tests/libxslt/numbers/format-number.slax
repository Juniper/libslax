        expr "\n  ";
    }
    expr "\n  ";
    <point-test> {
        for-each (number) {
            expr "\n    format-number(";
            expr .;
            expr ",'0.' )";
            expr " = ";
            expr format-number(., "0.");
        }
        expr "\n  ";
    }
    expr "\n  ";
    <point-test> {
        for-each (number) {
            expr "\n    format-number(";
            expr .;
            expr ", '.#')";
