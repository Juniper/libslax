                expr "REC";
            
            } else if (/spec/@w3c-doctype == "pr") {
                expr "REC";
            
            } else if (/spec/@w3c-doctype == "cr") {
                expr "REC";
            
            } else {
                expr "NOTE";
            }
            expr ".css";
        }
    }
}

template href.target ($target = .) {
    expr "#";
    if ($target/@id) {
        expr $target/@id;
    
    } else {
        expr generate-id($target);
    }
}
