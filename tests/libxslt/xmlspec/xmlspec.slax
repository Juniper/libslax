template css () {
    <style type="text/css"> {
        expr "\ncode           { font-family: monospace; }\n\ndiv.constraint,\ndiv.issue,\ndiv.note,\ndiv.notice     { margin-left: 2em; }\n\ndt.label       { display: run-in; }\n\nli p           { margin-top: 0.3em;\n                 margin-bottom: 0.3em; }\n      ";
