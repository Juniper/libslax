version 1.2;

output-method xml {
    encoding "ISO-8859-1";
}

var $targetId;
var $action;

main {
    apply-templates * |@*;
}

template toto () {
    <toto>;
}

template add ($type) {
    if ($type == "toto") {
        call toto();
    }
}

template copy () {
    copy-node {
        apply-templates node() |@*;
    }
}

template del () {
    /* effacer ! */
}

match *[attribute::id &&@id == ""] {
    /* attribute::type pour éviter de confondre l'absence d'attibute et
    la valeur nulle */
    if ($action == "del") {
        call del();
    
    } else if ($action == "add") {
        call copy();
        call add() {
            with $type = {
                expr "toto";
             }
        }
    
    } else if ($action == "repl") {
        if ($action == "del") {
            call del();
        }
        call add() {
            with $type = {
                expr "toto";
             }
        }
    }
}
/* liste des elements qui peuvent être édités, donc attribut id */
match domain {
    copy-node {
        if (not(@id)) {
            attribute "id" {
                expr generate-id();
            }
        }
        attribute "add" {
            expr "task";
        }
        attribute "del" {
            expr "domain";
        }
        apply-templates node() |@*;
    }
}

match name {
    copy-node {
        if (not(@id)) {
            attribute "id" {
                expr generate-id();
            }
        }
        attribute "replace" {
            expr "PCDATA";
        }
        apply-templates node() |@*;
    }
}

match task {
    copy-node {
        if (not(@id)) {
            attribute "id" {
                expr generate-id();
            }
        }
        attribute "replace" {
            expr "PCDATA";
        }
        attribute "add" {
            expr "task";
        }
        apply-templates node() |@*;
    }
}

match * {
    copy-node {
        apply-templates node() |@*;
    }
}

match @* {
    copy-node;
}
