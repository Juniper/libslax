version 1.2;

output-method html {
    encoding "ISO-8859-1";
}

decimal-format czf {
    decimal-separator ",";
    grouping-separator " ";
}

match Kapital {
    <html> {
        <title> "Example xsltproc";
        <body> {
            apply-templates Vklad;
        }
    }
}

match Vklad {
    expr format-number(Kc, "# ###,00 Kè", "czf");
}
